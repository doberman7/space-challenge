<h1>Challenge Created List</h1>
{{#if infoFlash}}
  <div class="alert alert-info" role="alert">
    {{infoFlash}}
  </div>
{{/if}}
<a href="/game/create"><button type="button" class="btn btn-success">Go Play</button>
</a>
<br>
<a href="/profile"><button type="button" class="btn btn-warning">My profile</button></a>

<br>
<a href="/logout"><button type="button" class="btn btn-danger">logout</button>
</a>
{{#each challenges}}
  <div class="card" style="width: 18rem;">
  <!-- <img class="card-img-top" src="{{userCreator.picture}}" alt="Card image cap"> -->
  <div class="card-body">
    <h5 class="card-title">Challenge created By {{userCreator.name}}</h5>
    <p class="card-text">Challenge send to {{userChallenged}}</p>
    <form class="" action="/challenge/edit" method="post">
        <input type="submit" class="btn btn-primary" />
    </form>
  </div>
</div>
{{/each}}
